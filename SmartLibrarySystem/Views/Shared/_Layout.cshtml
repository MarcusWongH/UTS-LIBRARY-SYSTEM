<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SmartLibrarySystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SmartLibrarySystem.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <h1>logo</h1>
        <h2>UTS<br>E-BOOK<br>LIBRARY</h2>
        <img src="./img/logo.png" alt="logo" class="logo">
        <ul>
            <li><a href="#">HOME</a></li>
            <li><a href="https://arc.uts.edu.my/ebook-try-2/">COLLECTION</a></li>
            <li><a href="https://arc.uts.edu.my/organisational-chart/">ABOUT US</a></li>
            <li><a href="https://arc.uts.edu.my/contact-us-try-2/">CONTACT</a></li>
        </ul>
    </header>
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - SmartLibrarySystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
